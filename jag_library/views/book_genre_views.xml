<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_product_book_genre_list" model="ir.ui.view">
        <field name="name">product.book.genre.list</field>
        <field name="model">product.book.genre</field>
        <field name="arch" type="xml">
            <list string="Genres">
                <field name="color" widget="color_picker"/>
                <field name="complete_name"/>
                <field name="parent_id" />
            </list>
        </field>
    </record>

    <record id="view_product_book_genre_form" model="ir.ui.view">
        <field name="name">product.book.genre.form</field>
        <field name="model">product.book.genre</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name" />
                        <field name="parent_id" />
                        <field name="color" widget="color_picker"/>
                    </group>
                    <notebook>
                        <page string="Books">
                            <field name="book_ids">
                                <list>
                                    <field name="name" />
                                    <field name="author_ids" widget="many2many_tags" />
                                    <field name="publisher_id" />
                                </list>
                            </field>
                        </page>
                        <page string="Notes">
                            <field name="notes" />
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
